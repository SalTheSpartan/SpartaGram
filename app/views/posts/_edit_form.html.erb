<div class="container">
  <form action="<%= post_path %>" method="POST">
    <input name="_method" type="hidden" value="PATCH" />
    <div class="form-group row">
      <label for="inputEmail3" class="col-sm-2 col-form-label">Title</label>
      <div class="col-sm-10">
        <input type="title" class="form-control"  placeholder="Title" name="post[title]" value="<%= @post.title %>">

      </div>
    </div>
    <div class="form-group">
      <label>Caption</label>
      <textarea class="form-control" id="exampleTextarea" rows="3" type="description" name="post[caption]"><%= @post.caption %></textarea>

    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

  </form>
</div>
