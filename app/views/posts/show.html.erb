<h1>Show Post Page</h1>

<h2><%= @post.title %></h2>
<img src="<%= @post.image.thumb.url %>"  style="width:202px;height:138px;margin-bottom: 39px;"/>
<p><%= @post.caption %></p>
<p>Submitted by <%= current_user.name%></p>

<%= link_to "Back" , root_path %>
<%= link_to "Edit" , edit_post_path %>
<%= link_to "Delete" , post_path , method: :delete, data: { confirm: "Are you Sure?"}%>
