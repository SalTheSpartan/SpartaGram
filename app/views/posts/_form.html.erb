
<div class="row justify-content-md-center">
  <form action="<%= posts_path %>" method="Post" enctype="multipart/form-data">
    <div class="form-group">
      <label>Title</label>
        <input type="title" class="form-control"  placeholder="Title" name="post[title]" >

    </div>
    <div class="form-group">
      <label>Image</label>
        <input type="file" accept="image/*;capture=camera" class="form-control"  placeholder="Title" name="post[image]" >

    </div>
    <div class="form-group">
      <label>Caption</label>
      <textarea class="form-control" id="exampleTextarea" rows="3" type="description" name="post[caption]" ></textarea>

    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

  </form>
</div>
