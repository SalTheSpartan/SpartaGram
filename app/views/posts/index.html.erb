<% if user_signed_in?%>
<p id="intro">Hello <%= current_user.name %>
  <br/>
  <span>
    Share your pictures and inspire others.
  </span>
</p>
<% else %>
  <p id="intro"> Post a Pic?
    <br/>
    <span>
      Share your pictures and inspire others.
    </span>
  </p>
<% end %>
<div id="posts">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="post_image">
        <img src="<%= post.image.small.url %> " class="img-fluid"/>
      </div>
      <div class="post_content">
        <div class="title">
          <h2>
            <%= link_to post.title, post %>
          </h2>
        </div>
        <div class="data clearfix">

          <p class="buttons">
            <span>
              <i class="fa fa-comments-o"></i>
              <%= post.comments.count %>
            </span>
            <span>
              <i class="fa fa-thumbs-o-up"></i>
              <%= post.likes.count %>
            </span>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
